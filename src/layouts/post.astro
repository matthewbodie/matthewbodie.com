---
import MainLayout from "./MainLayout.astro";
const { title } = Astro.props.frontmatter || Astro.props;
---

<MainLayout title={title}>
	<div class="max-w-4xl mx-auto py-6 md:py-8 px-5 md:px-4 space-y-4">
		<h1 class="text-3xl md:text-4xl font-bold mb-4 md:mb-6">{title}</h1>
		<div class="post-content text-lg md:text-base">
			<slot />
		</div>
	</div>
</MainLayout>

<style>
	@media (max-width: 768px) {
		.post-content :global(p),
		.post-content :global(li) {
			font-size: 1.125rem;
			line-height: 1.7;
			margin-bottom: 1rem;
		}

		.post-content :global(h2) {
			font-size: 1.75rem;
			margin-top: 1.5rem;
			margin-bottom: 1rem;
		}

		.post-content :global(h3) {
			font-size: 1.5rem;
			margin-top: 1.25rem;
			margin-bottom: 0.75rem;
		}
	}
</style>
