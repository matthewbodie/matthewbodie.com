---
import Layout from "../layouts/MainLayout.astro";
import { myName, introduction } from "../data";
import { Button } from "../components/ui/button";
import { MoveRight } from "lucide-react";
import EmailButton from "../components/email-button";
---

<Layout>
	<div
		class="flex flex-col md:flex-row md:justify-between items-center min-h-[calc(100vh-5rem)] gap-6 md:gap-12 px-4 md:px-8 py-6 md:py-8 max-w-full overflow-x-hidden"
	>
		<div class="flex flex-col gap-4 md:gap-8 max-w-full order-2 md:order-1">
			<h1
				class="text-6xl sm:text-6xl md:text-7xl lg:text-[10rem] font-bold leading-tight break-words"
			>
				{myName}
			</h1>
			<p
				class="text-lg sm:text-lg md:text-xl leading-relaxed -mt-1 md:-mt-4"
			>
				{introduction}
			</p>
			<div
				class="flex justify-center md:justify-start gap-3 md:gap-4 items-center flex-wrap w-full"
			>
				<a href="/about" class="w-fit">
					<Button>
						Learn More <MoveRight className="w-4 h-4 ml-1" />
					</Button>
				</a>
				<EmailButton client:load />
			</div>
		</div>
		<div
			class="relative aspect-square w-full max-w-[12rem] sm:max-w-[16rem] md:max-w-[24rem] flex-shrink-0 order-1 md:order-2 mb-2 md:mb-0"
		>
			<img
				src="/images/matthew/bodie_2020_400px.webp"
				alt="Matthew Bodie"
				class="rounded-full w-full h-full object-cover pointer-events-none"
			/>
		</div>
	</div>
</Layout>
